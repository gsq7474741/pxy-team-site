{
  "name": "pxy-team-site",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "db:up": "docker compose up -d",
    "db:down": "docker compose down",
    "dev": "docker compose up -d && turbo run dev --parallel",
    "build": "turbo run build",
    "frontend:start": "npx pnpm --filter frontend start",
    "backend:start": "npx pnpm --filter backend start",
    "lint": "turbo run lint",
    "backend:dev": "turbo run dev --filter=backend",
    "frontend:dev": "turbo run dev --filter=frontend",
    "backend:build": "turbo run build --filter=backend",
    "frontend:build": "turbo run build --filter=frontend",
    "backend:lint": "turbo run lint --filter=backend",
    "frontend:lint": "turbo run lint --filter=frontend"
  },
  "devDependencies": {
    "turbo": "^1.13.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
